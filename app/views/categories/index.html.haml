.categories
  .index

    %h1 Categories

    .quarter.grid

      .column
        %ul.boxes.white
          - @categories.each do |category|
            %li{ 'data-no-turbolink' => true }= link_to category.name, category_path(category), class: "#{'active' if params[:controller] == 'categories' && params[:id] == category.id }"
        
      .triple.column
        
        .graph
            
      .clear
      
:javascript
  $('.graph').barFreqChart(gon.abvs)