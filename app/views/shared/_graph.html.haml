.categories
  .index


    .fifth.grid
      
      .column
        %h3 One Way
        %ul.boxes.white.horizontal
          %li= link_to 'ABV', url_for(measure: "ABV"), class: is_measuring?("ABV", params)
          %li= link_to 'IBU', url_for(measure: "IBU"), class: is_measuring?("IBU", params)
          %li= link_to 'SRM', url_for(measure: "SRM"), class: is_measuring?("SRM", params)
        .clear
        
        %h3 Two Way
        %ul.boxes.white
          %li= link_to 'ABV vs. IBU', url_for(measure: "ABV and IBU"), class: is_measuring?("ABV and IBU", params)
          %li= link_to 'ABV vs. SRM', url_for(measure: "ABV and SRM"), class: is_measuring?("ABV and SRM", params)
          %li= link_to 'SRM vs. IBU', url_for(measure: "SRM and IBU"), class: is_measuring?("SRM and IBU", params)
        
        %h3 Categories
        %ul.boxes.white
          
          %li
            = link_to 'All Categories', categories_path(measure: params[:measure]), class: is_category?(nil, params)
            
          - @categories.each do |category|
            %li
              = link_to category.name, category_path(category, measure: params[:measure]), class: is_category?(category, params)
        
      .quadruple.column
        
        .graph
            
      .clear
      
:javascript
  if (gon.oneWay) {
    $('.graph').barFreqChart(gon.oneWay)
  }
  
  if (gon.twoWay) {
    $('.graph').scatterPlot(gon.twoWay)
    
  }
