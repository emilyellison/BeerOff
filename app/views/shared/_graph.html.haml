.categories
  .index


    .fifth.grid
      
      .column
        %ul.boxes.white.horizontal
          %li{ 'data-no-turbolink' => true }= link_to 'ABV', url_for(measure: "ABV"), class: is_measuring?("ABV", params)
          %li{ 'data-no-turbolink' => true }= link_to 'IBU', url_for(measure: "IBU"), class: is_measuring?("IBU", params)
          %li{ 'data-no-turbolink' => true }= link_to 'SRM', url_for(measure: "SRM"), class: is_measuring?("SRM", params)
        .clear
                
        %h3 Categories
        %ul.boxes.white
          
          %li{ 'data-no-turbolink' => true }
            = link_to 'All Categories', categories_path(measure: params[:measure]), class: is_category?(nil, params)
            
          - @categories.each do |category|
            %li{ 'data-no-turbolink' => true }
              = link_to category.name, category_path(category, measure: params[:measure]), class: is_category?(category, params)
        
      .quadruple.column
        
        .graph
            
      .clear
      
:javascript
  $('.graph').barFreqChart(gon.beerData)
